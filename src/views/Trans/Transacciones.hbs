<script type='text/javascript'
    src="https://rawgit.com/RobinHerbots/jquery.inputmask/3.x/dist/jquery.inputmask.bundle.js">    </script>
<script src="/scrips/Transacciones.js"></script>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h3 class="mb-3 m-4" id="TipoT"> {{Trans}} </h3>
</div>

<div class="row mx-auto">
    <div class="col-md-4  ">
        <div class="card m-2 p-2">
            <div class="card-body">
                {{#ifEquals Trans "Pagos"}}
                <a href="./nuevoPago/{{user.fullname}}" class="btn btn-success">
                    Nuevo
                </a>
                {{else}}
                <a href="./nuevo/{{Trans}}&{{user.fullname}}" class="btn btn-success">
                    Nuevo
                </a>
                {{/ifEquals}}
                
            </div>
        </div>
    </div>

    <div class="col-md-4 ">
        <div class="card m-2 p-2">
            <div class="card-body">

            </div>
        </div>
    </div>

    <div class="col-md-4 ">
        <div class="card m-2 p-2">
            <div class="card-body">

            </div>
        </div>
    </div>

</div>


<table id="tableTrans" data-height="900" data-toggle="table" data-toolbar="#toolbar" data-detail-view="true"
    data-detail-view-icon="true" data-detail-formatter="DatosTransFormatter" data-ajax="DatosTrans"
    data-pagination-parts="['pageList]" data-page-size="25" data-pagination="true" data-query-params="queryParams">
    <thead>
        <tr>
            <th data-field="row.Documento">Documento</th>
            {{#ifEquals Trans "Compras"}}
            <th data-field="row.Nombre">Proveedor</th>
            {{else}}
            <th data-field="row.Nombre">Cliente</th>
            {{/ifEquals}}
            <th data-field="row.Plazo">Plazo</th>
            <th data-field="row.Total">Total</th>
            <th data-field="FechadeEmision">Fecha Emision</th>
            <th data-field="operate" data-formatter="DatosTransOP" data-events="DatosTransOPEvents"></th>

        </tr>
    </thead>
</table>

<div class="modal fade" id="Transformar" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TransformarTitle">Transformar Documento</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="Doc1">Pedido</label>
                            <input class="form-control" type="text" id="Doc1" readonly>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="Prov">Proveedor</label>
                            <input class="form-control" type="text" id="Prov" readonly>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="Doc2">Documento de Compra</label>
                            <input class="form-control" type="text" id="Doc2">
                        </div>
                    </div>
                    <div class="col-2 my-auto">
                        <div class="form-group">
                            <a class="btn btn-success" href="javascript:void(0)" onclick="GenerarFC()"> Generar </a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick= "Transformar(Doc1.value,Doc2.value,'{{Trans}}',Prov.value)" >Transformar</button>
            </div>
        </div>
    </div>
</div>